<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.text.Font?>
<GridPane fx:controller="controllers.LoginViewController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <HBox GridPane.rowIndex="0" alignment="CENTER" spacing="15">
        <Label fx:id="loginLabel" text="Wprowadź dane:">
            <font>
                <Font size="20.0"/>
            </font>
        </Label>
    </HBox>
    <HBox GridPane.rowIndex="1" spacing="15">
        <TextField fx:id="loginTextField" promptText="login" alignment="CENTER"/>
    </HBox>
    <HBox GridPane.rowIndex="2" spacing="15">
        <PasswordField fx:id="passwordTextField" promptText="hasło" alignment="CENTER"/>
    </HBox>
    <HBox GridPane.rowIndex="3" alignment="CENTER">
        <Button fx:id="loginButton" text="Zaloguj" onAction="#login" minWidth="100"/>
    </HBox>
</GridPane>