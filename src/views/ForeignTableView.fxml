<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<GridPane fx:controller="controllers.ForeignTableViewController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <padding>
        <Insets top="5" bottom="5" right="10" left="10"/>
    </padding>
    <HBox GridPane.rowIndex="0" alignment="CENTER">
        <TableView fx:id="tableView" prefWidth="480" prefHeight="300">
            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
        </TableView>
    </HBox>
    <HBox GridPane.rowIndex="1" alignment="CENTER">
        <Button fx:id="okButton" text="OK" onAction="#handleOkButton"/>
    </HBox>
</GridPane>