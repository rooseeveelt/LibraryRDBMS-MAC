<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<GridPane fx:controller="controllers.MessageViewController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <padding>
        <Insets top="5" bottom="5" right="10" left="10"/>
    </padding>
    <HBox GridPane.rowIndex="0" alignment="CENTER">
        <Label fx:id="messageLabel"/>
    </HBox>
    <HBox GridPane.rowIndex="1" alignment="CENTER">
        <Button fx:id="confirmButton" onAction="#confirmButtonAction" text="OK"/>
    </HBox>
</GridPane>